{
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "watch": "lerna bootstrap --hoist && lerna run --parallel watch",
    "start": "npm run watch",
    "build": "lerna run --parallel build",
    "prebuild": "npm run build:typings",
    "build:typings": "lerna run --parallel build:typings",
    "prettier": "prettier --write 'packages/**/src/**'",
    "test": "rimraf coverage && NODE_ENV=test jest"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-external-helpers": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@commitlint/config-lerna-scopes": "^8.1.0",
    "@types/jest": "^24.0.17",
    "@types/react": "^16.4.0",
    "@types/react-dom": "^16.0.6",
    "@types/react-redux": "^7.0.3",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.9.0",
    "eslint": "^6.2.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.12.3",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "lerna": "^3.13.1",
    "lint-staged": "^9.2.3",
    "prettier": "^1.12.1",
    "rollup": "^1.1.2",
    "rollup-plugin-babel": "^4.2.0",
    "rollup-plugin-commonjs": "^10.0.2",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^6.0.0",
    "typescript": "^3.2.2"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!**/__tests__/**"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    },
    "globals": {
      "IS_PRODUCTION_ENV": false
    },
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "projects": [
      "<rootDir>/packages/*/*"
    ],
    "transform": {
      "^.+\\.[jt]sx?$": "babel-jest"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "post-commit": "git update-index -g"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": [
      "npm run prettier",
      "git add"
    ]
  }
}
