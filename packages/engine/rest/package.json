{
  "name": "@request-kit/engine-rest",
  "version": "0.3.0",
  "description": "wrapper over fetch or other http-client to make rest requests, compatible with other request-kit parts",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib",
    "test": "jest",
    "build": "rollup -c --environment PACKAGE_NAME:$npm_package_name",
    "build:typings": "tsc",
    "watch": "tsc -w & rollup -c -w --environment PACKAGE_NAME:$npm_package_name",
    "prepare": "npm run clean && npm run build:typings && npm run build"
  },
  "files": [
    "lib",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gleb-lobastov/request-kit.git"
  },
  "keywords": [
    "rest",
    "request",
    "fetch",
    "submit",
    "http",
    "ajax",
    "xhr"
  ],
  "author": "Gleb Lobastov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gleb-lobastov/request-kit/issues"
  },
  "homepage": "https://github.com/gleb-lobastov/request-kit#readme",
  "jest": {
    "globals": {
      "IS_PRODUCTION_ENV": false
    },
    "transform": {
      "^.+\\.[jt]sx?$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ]
  },
  "devDependencies": {
    "jest": "^23.0.6",
    "jest-fetch-mock": "^1.5.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.1.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
