{
  "name": "@request-kit/controller-redux",
  "version": "0.3.0",
  "description": "redux implementation of request controller: initialize requests and manage their state",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib",
    "test": "jest",
    "build": "rollup -c --environment PACKAGE_NAME:$npm_package_name",
    "build:typings": "tsc",
    "watch": "tsc -w & rollup -c -w --environment PACKAGE_NAME:$npm_package_name",
    "prepare": "npm run clean && npm run build:typings && npm run build"
  },
  "files": [
    "lib",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gleb-lobastov/request-kit.git"
  },
  "keywords": [
    "redux",
    "request",
    "data",
    "state"
  ],
  "author": "Gleb Lobastov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gleb-lobastov/request-kit/issues"
  },
  "homepage": "https://github.com/gleb-lobastov/request-kit#readme",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "redux-mock-store": "^1.5.3"
  },
  "jest": {
    "globals": {
      "IS_PRODUCTION_ENV": false
    },
    "transform": {
      "^.+\\.[jt]sx?$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ]
  }
}
