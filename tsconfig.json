{
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules", "packages"]
    }
  },
  "include": ["packages/**/src/**/*"],
  "exclude": ["node_modules"]
}
